---
import { getStrapiMedia, type MenuItem } from "../lib/strapi";

interface Props {
  item: MenuItem;
}

const { item } = Astro.props;
const { name, description, price, isMadeToOrder, image, cuisine } =
  item.attributes;

const imageUrl = getStrapiMedia(image?.data?.attributes?.url);
const cuisineName = cuisine?.data?.attributes?.name;
---

<div
  class="border border-gray-200 rounded-xl overflow-hidden bg-white shadow-sm transition-all duration-200 hover:-translate-y-1 hover:shadow-xl h-full flex flex-col"
>
  <div class="relative aspect-[4/3] overflow-hidden bg-gray-100">
    {
      imageUrl ? (
        <img src={imageUrl} alt={name} class="w-full h-full object-cover" />
      ) : (
        <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-indigo-500 to-purple-600 text-white font-bold text-2xl opacity-50">
          <span>Bayan Bites</span>
        </div>
      )
    }

    {
      (isMadeToOrder || cuisineName) && (
        <div class="absolute top-3 right-3 flex flex-col gap-2 items-end">
          {isMadeToOrder && (
            <span class="px-3 py-1.5 rounded-full text-xs font-semibold bg-white/95 text-purple-600 border border-purple-200 backdrop-blur-sm">
              Made to Order
            </span>
          )}
          {cuisineName && (
            <span class="px-3 py-1.5 rounded-full text-xs font-semibold bg-white/90 text-emerald-600 border border-emerald-200 backdrop-blur-sm">
              {cuisineName}
            </span>
          )}
        </div>
      )
    }
  </div>

  <div class="p-5 flex-grow flex flex-col">
    <div class="flex justify-between items-start gap-4 mb-2">
      <h3 class="text-xl font-bold text-gray-900 leading-tight m-0">{name}</h3>
      <span class="text-emerald-600 font-bold text-lg whitespace-nowrap"
        >${price.toFixed(2)}</span
      >
    </div>

    {
      description && (
        <p class="text-gray-600 text-sm leading-relaxed m-0 line-clamp-3">
          {description}
        </p>
      )
    }
  </div>
</div>
