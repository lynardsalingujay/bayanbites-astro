---
import { fetchStrapiSingle } from "../lib/strapi";

let homepage = null;
let error = null;

try {
  homepage = await fetchStrapiSingle("home-page");
  console.log("Homepage response:", JSON.stringify(homepage, null, 2));
} catch (e) {
  error = e instanceof Error ? e.message : "Unknown error";
  console.error("Error fetching homepage:", e);
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Strapi Debug - Homepage</title>
    <style>
      body {
        font-family: monospace;
        padding: 2rem;
        background: #1a1a1a;
        color: #0f0;
      }
      pre {
        background: #000;
        padding: 1rem;
        border-radius: 8px;
        overflow-x: auto;
      }
      .error {
        color: #f00;
      }
      .success {
        color: #0f0;
      }
    </style>
  </head>
  <body>
    <h1>üîç Strapi Debug - Homepage Endpoint</h1>

    <h2>Endpoint:</h2>
    <pre>GET /api/homepage?populate[heroSection][populate]=heroImage</pre>

    <h2>Status:</h2>
    {
      error ? (
        <div class="error">
          <p>‚ùå Error: {error}</p>
        </div>
      ) : homepage ? (
        <div class="success">
          <p>‚úÖ Successfully fetched homepage data</p>
        </div>
      ) : (
        <p class="error">‚ö†Ô∏è No data returned</p>
      )
    }

    <h2>Response Data:</h2>
    <pre>{JSON.stringify(homepage, null, 2)}</pre>

